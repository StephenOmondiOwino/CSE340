<%- include("../partials/header") %>

<main>
  <h1><%= title %></h1>

  <%- messages() %>

  <% if (locals.accountData && locals.accountData.account_firstname) { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <% } %>

  <% if (locals.accountData && (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin")) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Go to Inventory Management</a></p>
  <% } %>

  <p><a href="/account/update/<%= locals.accountData ? locals.accountData.account_id : '' %>">Update Account Info</a></p>

</main>

<%- include("../partials/footer") %>
