<form action="/account/register" method="post">
  <label for="accountFirstname">First Name:</label>
  <input type="text" name="account_firstname" id="accountFirstname" required>

  <label for="accountLastname">Last Name:</label>
  <input type="text" name="account_lastname" id="accountLastname" required>

  <label for="accountEmail">Email:</label>
  <input type="email" name="account_email" id="accountEmail" required placeholder="Enter a valid email address">

  <label for="accountPassword">Password:</label>
  <div class="password-rules">
    Passwords must be at least 12 characters and contain at least:
    <ul>
      <li>1 number</li>
      <li>1 uppercase letter</li>
      <li>1 lowercase letter</li>
      <li>1 special character</li>
    </ul>
  </div>
  <input type="password" 
         name="account_password" 
         id="accountPassword" 
         required
         pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">

  <button type="submit">Register</button>
</form>
<% if (typeof errors != "undefined") { %>
  <ul class="error-messages">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>


