<%- include("../partials/header") %>

<main>
  <h1><%= title %></h1>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="post">
    <label>Classification</label>
    <!-- classificationList is pre-built HTML from utilities -->
    <%- classificationList %>

    <label for="inv_make">Make</label>
    <input id="inv_make" name="inv_make" type="text" required value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" />

    <label for="inv_model">Model</label>
    <input id="inv_model" name="inv_model" type="text" required value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" />

    <label for="inv_year">Year</label>
    <input id="inv_year" name="inv_year" type="number" required min="1886" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" />

    <label for="inv_price">Price</label>
    <input id="inv_price" name="inv_price" type="number" step="0.01" required value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" />

    <label for="inv_miles">Mileage</label>
    <input id="inv_miles" name="inv_miles" type="number" required value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" />

    <label for="inv_image">Image path</label>
    <input id="inv_image" name="inv_image" type="text" required value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image.png' %>" />

    <label for="inv_thumbnail">Thumbnail path</label>
    <input id="inv_thumbnail" name="inv_thumbnail" type="text" required value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image-tn.png' %>" />

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

    <button type="submit">Add Vehicle</button>
  </form>
</main>

<%- include("../partials/footer") %>
