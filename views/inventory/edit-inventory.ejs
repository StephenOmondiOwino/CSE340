<%- include("../partials/header") %>

<main>
  <h1><%= title %></h1>

  <%- messages() %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- ✅ Update action points to /inv/update -->
  <form action="/inv/update" method="post">
    <!-- Hidden field to keep track of the vehicle being edited -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <label>Classification</label>
    <!-- classificationSelect is pre-built HTML from utilities -->
    <%- classificationSelect %>

    <label for="inv_make">Make</label>
    <input id="inv_make" name="inv_make" type="text" required value="<%= inv_make %>" />

    <label for="inv_model">Model</label>
    <input id="inv_model" name="inv_model" type="text" required value="<%= inv_model %>" />

    <label for="inv_year">Year</label>
    <input id="inv_year" name="inv_year" type="number" required min="1886" value="<%= inv_year %>" />

    <label for="inv_price">Price</label>
    <input id="inv_price" name="inv_price" type="number" step="0.01" required value="<%= inv_price %>" />

    <label for="inv_miles">Mileage</label>
    <input id="inv_miles" name="inv_miles" type="number" required value="<%= inv_miles %>" />

    <label for="inv_image">Image path</label>
    <input id="inv_image" name="inv_image" type="text" required value="<%= inv_image %>" />

    <label for="inv_thumbnail">Thumbnail path</label>
    <input id="inv_thumbnail" name="inv_thumbnail" type="text" required value="<%= inv_thumbnail %>" />

    <label for="inv_description">Description</label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

    <!-- ✅ Update button -->
    <button type="submit">Update Vehicle</button>
    <input type="hidden" name="inv_id" 
<% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>

  </form>
</main>

<%- include("../partials/footer") %>
