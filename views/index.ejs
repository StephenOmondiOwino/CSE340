<main>
  <!-- Hero Section -->
  <section class="hero" aria-labelledby="hero-title">
    <img class="hero__img" src="/images/site/own_today.png" alt="Own your dream car today!" />
    <div class="hero__overlay">
      <h1 id="hero-title">Welcome to CSE Motors</h1>
      <%- messages() %>

      <p class="tagline">Find your perfect car, upgrade it, and hit the road in style.</p>
      <a class="btn btn-primary" href="/inv">Browse Inventory</a>
    </div>
  </section>

  <!-- Featured Vehicles Section -->
  <section class="inventory" aria-labelledby="inv-heading">
    <h2 id="inv-heading">Featured Inventory</h2>
    <ul class="inventory__grid">
      <li class="vehicle">
        <img src="/images/vehicles/wrangler.jpg" alt="Jeep Wrangler off-road SUV" />
        <div class="vehicle__body">
          <h3>2021 Jeep Wrangler</h3>
          <p>4x4 • 18,000 km • Built for adventure</p>
          <a class="btn btn-secondary" href="/inv/wrangler">View Details</a>
        </div>
      </li>

      <li class="vehicle">
        <img src="/images/vehicles/hummer.jpg" alt="Yellow Hummer parked outdoors" />
        <div class="vehicle__body">
          <h3>2020 Hummer H2</h3>
          <p>AWD • 24,500 km • Rugged and powerful</p>
          <a class="btn btn-secondary" href="/inv/hummer">View Details</a>
        </div>
      </li>

      <li class="vehicle">
        <img src="/images/vehicles/monster-truck.jpg" alt="Blue monster truck with big wheels" />
        <div class="vehicle__body">
          <h3>2019 Monster Truck</h3>
          <p>Custom build • Low mileage • Extreme performance</p>
          <a class="btn btn-secondary" href="/inv/monster-truck">View Details</a>
        </div>
      </li>
    </ul>
  </section>

  <!-- Upgrades Section -->
  <section class="upgrades" aria-labelledby="upgrades-heading">
    <h2 id="upgrades-heading">Upgrade Your Ride</h2>
    <ul class="upgrades__grid">
      <li>
        <img src="/images/upgrades/flame.jpg" alt="Car flame decal" />
        <h3>Flame Decals</h3>
      </li>
      <li>
        <img src="/images/upgrades/hub-cap.jpg" alt="Shiny chrome hub caps" />
        <h3>Chrome Hub Caps</h3>
      </li>
      <li>
        <img src="/images/upgrades/flux-cap.png" alt="Flux capacitor upgrade" />
        <h3>Flux Capacitor</h3>
      </li>
      <li>
        <img src="/images/upgrades/bumper_sticker.jpg" alt="Funny bumper sticker" />
        <h3>Bumper Stickers</h3>
      </li>
    </ul>
  </section>
</main>
